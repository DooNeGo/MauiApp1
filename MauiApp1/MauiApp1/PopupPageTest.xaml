<?xml version="1.0" encoding="utf-8" ?>
<popup:PopupPage
    x:Class="MauiApp1.PopupPageTest"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:animations="clr-namespace:MPowerKit.Popups.Animations;assembly=MPowerKit.Popups"
    xmlns:mauiApp1="clr-namespace:MauiApp1"
    xmlns:popup="clr-namespace:MPowerKit.Popups;assembly=MPowerKit.Popups"
    x:Name="Root"
    Title="PopupPageTest"
    x:DataType="mauiApp1:PopupPageTest"
    BindingContext="{Reference Root}"
    CloseOnBackgroundClick="True">

    <popup:PopupPage.Animation>
        <animations:ScaleAnimation
            DurationIn="00:00:00.3"
            DurationOut="00:00:00.15"
            EasingIn="{x:Static Easing.SpringOut}"
            EasingOut="{x:Static Easing.Linear}"
            PositionIn="Bottom"
            PositionOut="Center"
            ScaleIn="0.8"
            ScaleOut="0.8" />
    </popup:PopupPage.Animation>

    <Border
        BackgroundColor="White"
        HorizontalOptions="Center"
        StrokeShape="{RoundRectangle CornerRadius=20}"
        VerticalOptions="Center">
        <Label
            Margin="50"
            HorizontalOptions="Center"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" />
    </Border>
</popup:PopupPage>